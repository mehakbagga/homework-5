<div class="mx-3 my-2">
<h3 class="mb-3">Change Your Password</h3>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %> </p>
    <% end %> 
<% end %>  
<%= form_with model:@user, url: change_user_password_path(@user), method: :patch, local: true do |form| %>
    <div class="mb-3">
        <%= form.label :current_password, class: "form-label" %>
        <%= form.password_field :current_password, class: "form-control" %>  
    </div>
    <div class="mb-3">
        <%= form.label :password, "new password", class: "form-label"%>
        <%= form.password_field :password, class: "form-control"%>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation, "new password confirmation", class: "form-label"%>
        <%= form.password_field :password_confirmation, class: "form-control"%>
    </div>
    <%= form.submit "Update Password", class: "btn btn-primary mb-3" %> 
<% end %> 

</div>